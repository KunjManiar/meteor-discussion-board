{
	"name": "discussion-board",
	"private": true,
	"scripts": {
		"local": "MONGO_URL='mongodb+srv://<username>:<password@<hostname>/meteor_discussion?authSource=admin&replicaSet=<replicaSet>&readPreference=primary&ssl=true' meteor run --settings settings-local.json --port 4000",
		"start": "meteor run",
		"test": "meteor test --once --driver-package meteortesting:mocha",
		"test-app": "TEST_WATCH=1 meteor test --full-app --driver-package meteortesting:mocha",
		"visualize": "meteor --production --extra-packages bundle-visualizer"
	},
	"dependencies": {
		"@babel/runtime": "^7.14.6",
		"bcrypt": "^5.0.1",
		"cloudinary": "^1.26.3",
		"cors": "^2.8.5",
		"express": "^4.17.1",
		"meteor-node-stubs": "^1.0.3",
		"moment": "^2.29.1",
		"multer": "^1.4.2",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-router": "^5.2.0",
		"react-router-dom": "^5.2.0",
		"simpl-schema": "^1.12.0",
		"styled-components": "^5.3.0",
		"styled-icons": "^10.35.0"
	},
	"meteor": {
		"mainModule": {
			"client": "client/main.jsx",
			"server": "server/main.js"
		},
		"testModule": "tests/main.js"
	},
	"devDependencies": {
		"husky": "^7.0.1",
		"lint-staged": "^11.0.1",
		"prettier": "2.3.2"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": [
			"prettier --write",
			"git add"
		],
		"*.jsx": [
			"prettier --write",
			"git add"
		]
	}
}
